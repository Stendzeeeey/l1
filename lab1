1.Дано трехзначное число. В нем зачеркнули первую слева цифру и приписали ее справа. Вывести xbckj/
#include "pt4.h"
using namespace std;

void Solve()
{
    Task("Integer13");
    int x, y;
    pt >> x;
    y = (x % 100 / 10 * 100) + (x % 10) * 10 + x / 100;
    pt << y;
    
