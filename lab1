    pt >> y;

    pt << (x > 0 && y < 0);
    
    3.Даны три переменные вещественного типа: A, B, C. Если их значения упорядочены по возрастанию, то удвоить их; в противном случае заменить значение каждой переменной на противоположное. Вывести новые значения переменных A, B, C.
    #include "pt4.h"
using namespace std;

void Solve()
{
    Task("If16");
    float z, x, c;
    pt >> z >> x >> c;
    if ((z <= x) && (x <= c)) {
        z = z * 2;
        x = x * 2;
        c = c * 2;
        pt << z << x << c;
    }
    else {
        z = z * (-1);
        x = x * (-1);
        c = c * (-1);
        pt << z << x << c;
    }
    }
    
    4.Дано целое число K. Вывести строку-описание оценки, соответствующей числу K (1 — «плохо», 2 — «неудовлетворительно», 3 — «удовлетворительно», 4 — «хорошо», 5 — «отлично»). Если K не лежит в диапазоне 1–5, то вывести строку «ошибка».
#include "pt4.h"
#include <iostream>
#include <cmath>
using namespace std;

void Solve()
{
    Task("Case2");
    setlocale(LC_ALL, "Russian");
    int k; 
    pt >> k;

    switch (k)
    {
    case 1: pt << "плохо"; break;
    case 2: pt << "неудовлетворительно"; break;
    case 3: pt << "удовлетворительно"; break;
    case 4: pt << "хорошо"; break;
    case 5: pt << "отлично"; break;
    default:pt << "ошибка";
    }

}
